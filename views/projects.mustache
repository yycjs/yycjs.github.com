<div class="container-fluid">
	<div class="row-fluid">
	  <div class="span12">
	    <h1>Our Projects</h1>
	    <hr>
	  </div>
	</div>

	{{#projects}}
	<div class="project">
	  <div class="row-fluid">
	    <div class="span12">
	      <h2>
          {{description}}
      	</h2>
      	<h1 class="project-links">
      			<a href="{{html_url}}" target="_blank"><i class="icon-github"></i></a>
      		  {{#if homepage}}
      		  <a href="{{homepage}}" target="_blank"><i class="icon-home-1"></i></a>
      		  {{/if}}
      	</h1>
	    </div>
	  </div>

	  <div class="row-fluid">
      {{#readme}}
	    <div class="project-description span8">
          {{{html}}}
	    </div>
      {{/readme}}
	    <div class="span4">
	    	<a href="{{homepage}}" target="_blank">
	    		<img class="img-rounded" src="{{homepage}}/screenshot.png">
	    	</a>
	    </div>
	  </div>
	</div>
	{{/projects}}
</div>